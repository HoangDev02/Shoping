<!-- product section -->
<section class="product_section layout_padding">
  <div class="container">
    <div class="heading_container heading_center">
      <h2>
        Product
        <span>{{product.name}}</span>
      </h2>
    </div>

    <style>
      .card_detail{ width: 800px; height: 400px; border-radius: 8px; box-shadow:
      5px 5px 8px gray; margin: 0 auto; display: flex; padding: 1em;
      justify-content: space-between; } .card_image{ width: 50%; height: 100%; }
      .card_image img{ width: 100%; height: 100%; object-fit: contain; }
      .card_content{ width: 47%; height: 100%; padding: 1rem; display: flex;
      justify-content: space-between; flex-wrap: wrap;} .card_content a{
      background-color: green; color: white; border-radius: 8px; box-shadow: 5px
      5px 8px gray;display: block;width: 100px;height: 40px;text-align:
      center;line-height: 40px;margin-top: 175px;} .card_content a:hover{
      background-color: rgb(2, 168, 2); color: rgb(220, 218, 218); transition:
      all 0.5s ease; }
    </style>

    <div class="card_detail">
      <div class="card_image">
        <img src="{{product.img}}" alt="image" />
      </div>
      <div class="card_content">
        <div style="width: 100%;">
          <h2>{{product.name}}</h2>
          <p>price: ${{product.price}}</p>
          <p>description: {{product.description}}</p>
        </div>
        <a href="" class="option2">
          Buy Now
        </a>
      </div>
    </div>

  </div>
</section>
<!-- end product section -->