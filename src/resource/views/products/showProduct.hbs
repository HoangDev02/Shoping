<div class="hero_area">


<!-- product section -->
<section class="product_section layout_padding">
  <div class="container">
    <div class="heading_container heading_center">
      <h2>
        Our
        <span>products</span>
      </h2>
    </div>
    <div class="row">

      {{#each products}}
        <div class="col-sm-6 col-md-4 col-lg-4">
          <div class="box">
            <div class="option_container">
              <div class="options">
                <a href="/detail/{{this._id}}" class="option1">
                  Details
                </a>
                <a href="" class="option2">
                  Buy Now
                </a>
              </div>
            </div>
            <div class="img-box">
              <img src={{this.img}} alt="image" />
            </div>
            <div class="detail-box">
              <h5
                style="white-space: nowrap;
                    overflow: hidden;
                    display: block;
                    width: 150px;
                    text-overflow: ellipsis;"
              >
                {{this.name}}
              </h5>
              <h6>
                ${{this.price}}
              </h6>
            </div>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
</section>
<!-- end product section -->
